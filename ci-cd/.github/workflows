on:
  push:
    branches:
      - main
      - "feature/**"
  pull_request:
    branches:
      - "feature/**"

jobs:
  terraform:
    name: Terraform Workflow
    runs-on: ubuntu-latest

    env:
      TF_VERSION: "1.5.7" 
      AWS_REGION: "us-east-1" 

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Terraform
        uses: hashicorp/setup-terraform@v2
        with:
          terraform_version: ${{ env.TF_VERSION }}

      - name: Validate Terraform configuration
        run: terraform validate

      - name: Initialize Terraform
        run: terraform init

      - name: Terraform Plan for Sandbox
        if: startsWith(github.ref_name, 'feature/')
        run: terraform plan -var-file="sandbox.tfvars"

      - name: Apply Terraform Changes to Sandbox
        if: startsWith(github.ref_name, 'feature/') && github.event_name == 'push'
        run: terraform apply -auto-approve -var-file="sandbox.tfvars"

      - name: Terraform Plan for Production
        if: github.ref_name == 'main'
        run: terraform plan -var-file="production.tfvars"

      - name: Manual Approval for Production Apply
        if: github.ref_name == 'main' && github.event_name == 'push'
        uses: hmarr/auto-approve-action@v2

      - name: Apply Terraform Changes to Production
        if: github.ref_name == 'main' && github.event_name == 'push'
        run: terraform apply -var-file="production.tfvars"